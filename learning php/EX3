<!DOCTYPE HTML>
<html>
<head>
	<title> Welcome to php</title>
</head>
<body>
<?php
   $x=20; /* including object into the php
   oops concept in php using construct method and message method to display op*/
   class fashion {
     public $model;
	 public $price;
	  public function __construct($model,$price)
     {
	  $this->model=$model;
	  $this->price=$price;
	 }
	 public function message(){
	  return " the model $this->model is new trend and it's price is $this->price";
	  }
	 }
$cool = new fashion("tonJeans","999");
echo $cool ->message();
?>
</body>
